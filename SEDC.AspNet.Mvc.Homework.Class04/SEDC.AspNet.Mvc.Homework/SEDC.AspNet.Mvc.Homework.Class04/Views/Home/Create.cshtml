@model ProductCreateViewModel
@{
    ViewBag.Title = "Create Product";
}
<form enctype="multipart/form-data" class="mt-3" asp-controller="home" asp-action="create" method="post">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Name"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Name" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Price"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Price" placeholder="Price" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Description"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Description" placeholder="Decription" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Category" class="col-sm-2 col-form-label"> </label>
        <div class="col-sm-10">
            <select asp-for="Category" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<Categories>()"></select>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Create Product</button>
</form>